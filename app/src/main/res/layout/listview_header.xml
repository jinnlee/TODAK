<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <!--고민내용부분-->
    <TextView
        android:id="@+id/header_writeText"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:autoLink="web|phone|email"
        android:gravity="center"
        android:linksClickable="true"
        android:textColor="#d3fff7f7" />
    <!--android:layout_below="@id/time"-->
    <!--android:hint="하고 싶은 말을 적어보세요 :)"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="by  "
            android:textColor="#d3fff7f7" />

        <TextView
            android:id="@+id/writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#d3fff7f7" />
        <!--android:textColor="#d3fff7f7"-->

    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="#d3fff7f7" />-->
    <!--&lt;!&ndash;android:background="#d3fff7f7"&ndash;&gt;-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <!--<TextView-->
        <!--android:id="@+id/time"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_gravity="left"-->
        <!--android:text="1분 전"-->
        <!--android:textColor="#d3fff7f7" />-->

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textColor="#d3fff7f7" />

        <CheckBox
            android:id="@+id/heart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selector_heart_click"
            android:button="@null"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center" />


        <TextView
            android:id="@+id/heart_num"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="7dp"
            android:text="0"
            android:textColor="#d3fff7f7" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chat"
            android:gravity="center_vertical" />
        <!--android:backgroundTint="#d3fff7f7"-->

        <TextView
            android:id="@+id/chat_num"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="7dp"
            android:text="0"
            android:textColor="#d3fff7f7" />

    </LinearLayout>
</LinearLayout>